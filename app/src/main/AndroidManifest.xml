<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.biz.aceras.ordertracking">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:allowBackup="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.TrackDescriptionListActivity"/>
        <activity android:name=".activities.TestActivity"/>
        <activity android:name=".activities.MainActivity"/>
        <activity android:name=".activities.ExpiredActivity" />
        <activity android:name=".activities.RegisterActivity"
            android:theme="@style/AppTheme.Register"/>
        <activity android:name=".activities.VerifyActivity" />
        <activity android:name=".activities.TrackInfoActivity" />
        <activity android:name=".activities.TrackListActivity" />
        <activity android:name=".activities.ActivateActivity"/>
        <activity android:name=".activities.WelcomeActivity"
            android:theme="@style/AppTheme.Welcome"/>
        <activity android:name=".activities.TrackItemInfoActivity"/>
        <activity android:name=".activities.WebViewFullscreenActivity"/>
    </application>

</manifest>