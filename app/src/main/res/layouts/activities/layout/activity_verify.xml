<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">



    <TextView
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter the 6-digit key as shown below to begin tracking your orders"
        android:textSize="20dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvGenerateOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Generating new OTP..."
        android:visibility="invisible" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOTP1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:maxLength="1"
            android:textSize="@dimen/otp_text"
            android:textAlignment="center" />

        <android.support.v4.widget.Space
            android:layout_width="2dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tvOTP2"
            android:maxLength="1"
            android:textSize="@dimen/otp_text"
            android:textAlignment="center"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <android.support.v4.widget.Space
            android:layout_width="2dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tvOTP3"
            android:maxLength="1"
            android:textSize="@dimen/otp_text"
            android:textAlignment="center"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <android.support.v4.widget.Space
            android:layout_width="2dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tvOTP4"
            android:maxLength="1"
            android:textSize="@dimen/otp_text"
            android:textAlignment="center"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <android.support.v4.widget.Space
            android:layout_width="2dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tvOTP5"
            android:maxLength="1"
            android:textSize="@dimen/otp_text"
            android:textAlignment="center"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <android.support.v4.widget.Space
            android:layout_width="2dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tvOTP6"
            android:maxLength="1"
            android:textSize="@dimen/otp_text"
            android:textAlignment="center"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etOTP1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_bright"
            android:inputType="phone"
            android:maxLength="1"
            android:textAlignment="center" />

        <android.support.v4.widget.Space
            android:layout_width="2dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/etOTP2"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="phone"
            android:background="@android:color/holo_blue_bright"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <android.support.v4.widget.Space
            android:layout_width="2dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/etOTP3"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="phone"
            android:background="@android:color/holo_blue_bright"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <android.support.v4.widget.Space
            android:layout_width="2dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/etOTP4"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="phone"
            android:background="@android:color/holo_blue_bright"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <android.support.v4.widget.Space
            android:layout_width="2dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/etOTP5"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="phone"
            android:background="@android:color/holo_blue_bright"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <android.support.v4.widget.Space
            android:layout_width="2dp"
            android:layout_height="0dp" />

        <EditText
            android:id="@+id/etOTP6"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="phone"
            android:background="@android:color/holo_blue_bright"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="50dp"
        android:text="Verify"/>



    <TextView
        android:id="@+id/tvIncorrectCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />

</LinearLayout>