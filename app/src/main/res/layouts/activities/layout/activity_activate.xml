<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/overall_margin"
    tools:context=".activities.MainActivity">

    <TextView
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter the Activate Code to activate your account"
        android:textSize="20dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/etActivationCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Activation Code"
        android:gravity="center"
        android:layout_marginHorizontal="40dp"/>

    <Button
        android:id="@+id/btnActivate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="50dp"
        android:text="Activate"/>

    <TextView
        android:id="@+id/tvResendAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Resend Activation Code"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>