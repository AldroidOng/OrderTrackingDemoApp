<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.biz.aceras.ordertracking"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="false"
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.biz.aceras.ordertracking.activities.SplashActivity"
            android:theme="@style/AppTheme.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.biz.aceras.ordertracking.activities.TrackDescriptionListActivity" />
        <activity android:name="com.biz.aceras.ordertracking.activities.TestActivity" />
        <activity android:name="com.biz.aceras.ordertracking.activities.MainActivity" />
        <activity android:name="com.biz.aceras.ordertracking.activities.ExpiredActivity" />
        <activity
            android:name="com.biz.aceras.ordertracking.activities.RegisterActivity"
            android:theme="@style/AppTheme.Register" />
        <activity android:name="com.biz.aceras.ordertracking.activities.VerifyActivity" />
        <activity android:name="com.biz.aceras.ordertracking.activities.TrackInfoActivity" />
        <activity android:name="com.biz.aceras.ordertracking.activities.TrackListActivity" />
        <activity android:name="com.biz.aceras.ordertracking.activities.ActivateActivity" />
        <activity
            android:name="com.biz.aceras.ordertracking.activities.WelcomeActivity"
            android:theme="@style/AppTheme.Welcome" />
        <activity android:name="com.biz.aceras.ordertracking.activities.TrackItemInfoActivity" />
        <activity android:name="com.biz.aceras.ordertracking.activities.WebViewFullscreenActivity" />

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.biz.aceras.ordertracking.com.squareup.picasso"
            android:exported="false" />
    </application>

</manifest>